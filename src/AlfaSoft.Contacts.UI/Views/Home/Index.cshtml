@model IEnumerable<AlfaSoft.Contacts.UI.Models.ContactViewModel>
<section>
    <div>
        <div height: 100%; background-position: center; background-repeat: no-repeat; background-size: cover">
            <div style="text-align: center;">
                @*<img src="~/images/banners/nerdstore.png" />*@
            </div>
        </div>
        <div class="container" style=" padding-top: 20px">
            <a asp-controller="Contacts" asp-action="Create"  class="btn btn-primary"> Create</a>
            <div class="table table-striped">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone Contact</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            foreach (var contact in Model.OrderBy(p => p.Name))
                            {
                                <tr>
                                    <td>

                                        @contact.Name
                                    </td>
                                    <td>
                                        @contact.Email
                                    </td>
                                    <td>
                                        @contact.ContactPhone
                                    </td>
                                    <td>
                                        <a asp-controller="Contacts" asp-action="Details" asp-route-id="@contact.Id" class="btn btn-success"> Details</a>
                                        <a asp-controller="Contacts" asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-secondary"> Edit</a>
                                        <a asp-controller="Contacts" asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-danger"> Delete</a>
                                    </td>
                                </tr>




                                <!--<a asp-controller="Home" asp-action="Index" asp-route-id="@contact.Id" class="title">
                                    <b> @contact.Name</b>
                                </a>!-->
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>