@model AlfaSoft.Contacts.UI.Models.ContactViewModel

<form asp-action="Delete" asp-controller="Contacts" method="post">
    <div class="card-body">
        <h4 class="card-title mb-4">Delete</h4>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" hidden="hidden" />
    <h3> Are you sure you want to delete @Model.Name from contacts?</h3>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Delete</button>
    </div>
</form>